<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFCFB"
    tools:context=".Screens.WelcomeScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Perfect Match to Fit Your Vibe"
                android:textColor="@color/black"
                android:textSize="38sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our matches are crafted to be the perfect\nfit for every student, creating lasting bonds for college and beyond."
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:src="@drawable/intro_pic" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/startBtn"
                android:layout_width="125dp"
                android:layout_gravity="end"
                android:layout_marginEnd="24dp"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:layout_marginTop="32dp"
                android:textColor="@color/white"
                style="@android:style/Widget.Button"
                android:text="Start" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account? Sign In"
                android:textSize="18sp"
                android:layout_margin="16dp"
                android:textAlignment="center"
                android:textColor="@color/black"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>