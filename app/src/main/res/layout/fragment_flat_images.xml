<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragements.FlatImagesFragment3"
    android:fitsSystemWindows="true"
    android:background="@color/login_background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="34dp"
            />

        <TextView
            android:id="@+id/nameHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/satoshi_bold"
            android:text="Add your flatâ€™s pictures"
            android:textColor="@color/black"
            android:textSize="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="36dp"/>

        <TextView
            android:id="@+id/photoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/nameHeading"
            app:layout_constraintTop_toBottomOf="@+id/nameHeading"
            android:text="@string/pictureImageDescriptionFlat"
            android:textSize="16dp"
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginTop="16dp"
            android:textColor="#B2000000"
            />

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/photoDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_1"
                    android:layout_width="184dp"
                    android:layout_height="255dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/imageinput2"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:id="@+id/image_2"
                    android:layout_width="184dp"
                    android:layout_height="255dp"
                    android:src="@drawable/imageinput2"
                    android:scaleType="centerCrop"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_3"
                    android:layout_width="184dp"
                    android:layout_height="255dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/imageinput2"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:id="@+id/image_4"
                    android:layout_width="184dp"
                    android:layout_height="255dp"
                    android:src="@drawable/imageinput2"
                    android:scaleType="centerCrop"
                    />
            </TableRow>
        </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="34dp"
            android:backgroundTint="#1db7ae"
            android:text="Next"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

